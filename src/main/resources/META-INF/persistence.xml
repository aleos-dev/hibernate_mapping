<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="default">

        <class>entity.Address</class>
        <class>entity.City</class>
        <class>entity.Country</class>
        <class>entity.Customer</class>
        <class>entity.StaffManager</class>
        <class>entity.Store</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="jakarta.persistence.jdbc.user" value="aleos"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <property name="hibernate.default_schema" value="hibernate_mod4_mapping"/>


            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Additional properties as needed -->
            <property name="hibernate.physical_naming_strategy"
                      value="org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl"/>
        </properties>

    </persistence-unit>

    <persistence-unit name="personal">

        <class>entity.Address</class>
        <class>entity.City</class>
        <class>entity.Country</class>
        <class>entity.Customer</class>
        <class>entity.StaffManager</class>
        <class>entity.Store</class>

        <properties>

            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="jakarta.persistence.jdbc.user" value="aleos"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <property name="hibernate.default_schema" value="mapping_personal_db"/>



            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
<!--            <property name="hibernate.hbm2ddl.auto" value="create"/>-->

            <!-- Additional properties as needed -->
            <property name="hibernate.physical_naming_strategy"
                      value="org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl"/>
        </properties>


    </persistence-unit>
</persistence>
